<div  class="register-photo" style="background-color: rgb(245,247,249);height: 100vh;">
    <div class="form-container">
        <div class="image-holder"></div>
        <form action="/register-user" method="post" style="background-color: rgb(4,5,8);">
            <h2 class="text-center" style="color: rgb(235,240,245);"><strong>Create</strong> an account.</h2>
            <h2 align="center" style="color:red">{{registrationError}}</h2>
            <div class="form-group"><input class="form-control" type="username" name="username" placeholder="Username"
                    required=""  maxlength="255"></div>
            <div class="form-group"><input class="form-control" type="password" name="password" placeholder="Password"
                    minlength="6" maxlength="15"></div>
            <div class="form-group"><input class="form-control" type="password" name="password-repeat"
                    placeholder="Password (repeat)" required=""></div>
            <div class="form-group">
                <div class="form-check"><label class="form-check-label" style="color: rgb(253,253,254);"><input
                            class="form-check-input" type="checkbox">I agree to the license terms.</label></div>
            </div>
            <div class="form-group"><button class="btn btn-primary btn-block" type="submit">Sign Up</button></div>
            <a class="already" href="/" style="color: rgb(246,248,249);" >You already have an account? Login here.</a>
            
        </form>
        
    </div>
</div>